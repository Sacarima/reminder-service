{
  "name": "reminder-service",
  "private": true,
  "packageManager": "pnpm@9.12.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "infra:up": "docker compose -f infra/docker-compose.yml up -d",
    "infra:down": "docker compose -f infra/docker-compose.yml down -v",
    "infra:logs": "docker compose -f infra/docker-compose.yml logs -f",
    "format": "prettier -w ."
  },
  "devDependencies": {
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.3.1",
    "prettier": "^3.6.2",
    "prisma": "^6.16.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@prisma/client": "^6.16.1",
    "dotenv": "^17.2.2",
    "luxon": "^3.7.2",
    "pino": "^9.9.5",
    "prom-client": "^15.1.3",
    "zod": "^4.1.8"
  }
}
